<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.medical.Inoc.InoculationReadActivity"
    android:id="@+id/parent_layout">

    <HorizontalScrollView
        android:id="@+id/tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="DHPPL"
                android:textOff="DHPPL"
                android:textOn="DHPPL" />

            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="코로나"
                android:textOff="코로나"
                android:textOn="코로나" />

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="켄넬코프"
                android:textOff="켄넬코프"
                android:textOn="켄넬코프" />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="CVRP"
                android:textOff="CVRP"
                android:textOn="CVRP" />

            <ToggleButton
                android:id="@+id/toggleButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="백혈병"
                android:textOff="백혈병"
                android:textOn="백혈병" />

            <ToggleButton
                android:id="@+id/toggleButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="FID"
                android:textOff="FID"
                android:textOn="FID" />

            <ToggleButton
                android:id="@+id/toggleButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="광견병"
                android:textOff="광견병"
                android:textOn="광견병" />

            <ToggleButton
                android:id="@+id/toggleButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="심장사상충"
                android:textOff="심장사상충"
                android:textOn="심장사상충" />

        </LinearLayout>
    </HorizontalScrollView>

<!--    &lt;!&ndash;구분선&ndash;&gt;-->
<!--    <View-->
<!--        android:id="@+id/line"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginHorizontal="10dp"-->
<!--        android:background="#262626"-->
<!--        android:layout_below="@+id/tag_layout"/>-->

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_layout"

        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tag_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="태그"
            android:textColor="#000"
            android:textSize="16sp" />

        <!--상태 메시지-->
        <TextView
            android:id="@+id/date_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="접종일"
            android:textColor="#444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/due_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="예정일"
            android:textColor="#444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hospital_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="병원"
            android:textColor="#444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etc_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="비고"
            android:textColor="#444"
            android:textSize="16sp" />
    </LinearLayout>

    <!--구분선-->
    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#262626"
        android:layout_below="@+id/title_layout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineView"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/insert_btn"
        android:contentDescription="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/main_color"
        android:tint="@color/white"
        android:src="@drawable/ic_add"
        />

</RelativeLayout>