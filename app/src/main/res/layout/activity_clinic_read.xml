<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.medical.Clinic.ClinicReadActivity"
    android:id="@+id/parent_layout">

    <HorizontalScrollView
        android:id="@+id/tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ToggleButton
                android:id="@+id/toggleButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="정기"
                android:textOff="정기"
                android:textOn="정기" />

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="혈액"
                android:textOff="혈액"
                android:textOn="혈액" />


            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="X-ray"
                android:textOff="X-ray"
                android:textOn="X-ray" />


            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="초음파"
                android:textOff="초음파"
                android:textOn="초음파" />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="CT"
                android:textOff="CT"
                android:textOn="CT" />


            <ToggleButton
                android:id="@+id/toggleButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/togglebtn_check"
                android:text="MRI"
                android:textOff="MRI"
                android:textOn="MRI" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_layout"

        android:gravity="center_vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tag_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="태그"
            android:textSize="16sp"
            android:textColor="#000"/>

        <!--상태 메시지-->
        <TextView
            android:id="@+id/date_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="검진일"
            android:textSize="16sp"
            android:textColor="#444"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/hospital_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="병원"
            android:textSize="16sp"
            android:textColor="#444"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/etc_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="비고"
            android:textSize="16sp"
            android:textColor="#444" />
    </LinearLayout>

    <!--구분선-->
    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#262626"
        android:layout_below="@+id/title_layout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineView"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/insert_btn"
        android:contentDescription="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/main_color"
        android:tint="@color/white"
        android:src="@drawable/ic_add"
        />

</RelativeLayout>